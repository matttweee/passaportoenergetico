# Database
DATABASE_URL=postgresql+psycopg2://pe:pe_password@postgres:5432/bollettometro

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1

# Storage
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=/data/uploads

# OpenAI (required for extraction)
OPENAI_API_KEY=

# Secrets
SECRET_KEY=change-this-secret-key-min-32-chars

# URLs
BASE_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000

# Trend thresholds (percent)
TREND_GREEN_THRESHOLD_PCT=15.0
TREND_YELLOW_THRESHOLD_PCT=30.0

# TTL (hours) for raw uploads
UPLOAD_TTL_HOURS=24

# Limits
MAX_FILE_MB=15
LOG_LEVEL=INFO
ENV=dev
