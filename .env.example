## Database
POSTGRES_USER=pe
POSTGRES_PASSWORD=pe_password
POSTGRES_DB=passaporto_energetico
# For docker-compose: backend uses postgres service name
DATABASE_URL=postgresql+psycopg://pe:pe_password@postgres:5432/passaporto_energetico

## Backend base URL (per link di condivisione / presigned)
BASE_URL=http://localhost:8000

## CORS (frontend)
CORS_ORIGINS=http://localhost:3000

## Admin
ADMIN_PASSWORD=cambia-questa-password
SECRET_KEY=cambia-questa-secret-key

## Storage
# local | s3
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=/data/uploads

# S3-compatible (MinIO support)
S3_ENDPOINT_URL=http://minio:9000
S3_REGION=eu-west-1
S3_BUCKET=passaporto-energetico
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

## OCR / Limits
MAX_FILE_MB=15

## Logging
LOG_LEVEL=INFO

