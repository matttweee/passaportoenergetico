## Database
POSTGRES_USER=pe
POSTGRES_PASSWORD=INSERISCI_PASSWORD_FORTE_QUI
POSTGRES_DB=passaporto_energetico
DATABASE_URL=postgresql+psycopg://pe:INSERISCI_PASSWORD_FORTE_QUI@postgres:5432/passaporto_energetico

## Backend URLs
BASE_URL=https://passaportoenergetico.it
CORS_ORIGINS=https://passaportoenergetico.it,https://www.passaportoenergetico.it

## Admin (CAMBIA QUESTI VALORI!)
ADMIN_PASSWORD=INSERISCI_PASSWORD_ADMIN_FORTE_QUI
SECRET_KEY=INSERISCI_SECRET_KEY_FORTE_QUI_MIN_32_CARATTERI

## Storage
# local = filesystem locale (default)
# s3 = S3-compatible (MinIO/AWS)
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=/data/uploads

# Se usi S3, decommenta e configura:
# S3_ENDPOINT_URL=https://s3.amazonaws.com
# S3_BUCKET=passaporto-energetico
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_REGION=eu-west-1

## Ambiente
ENV=prod
LOG_LEVEL=INFO

## OCR / Limits
MAX_FILE_MB=15
OCR_MAX_PAGES=3
